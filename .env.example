# Flask Configuration
FLASK_APP=app.wsgi:app
FLASK_ENV=development
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@db:5432/tasksservice
DATABASE_TEST_URL=postgresql://postgres:postgres@db:5432/tasksservice_test

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=43200  # 12 hours in seconds

# Logging
LOG_LEVEL=INFO

# Application Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT=100/hour